
@{
    ViewData["Title"] = "Files";
}
@model List<UserFile>

@section Scripts{
    <script>
        $(document).ready(function () {

            var hasStartCreatingExcel = '@TempData["StartCretingExcel"]';
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Your process has been started.',
                showConfirmButton: false,
                timer:2500
            })
        })
    </script>
}
<h1>Files</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreatedAt</td>
            <td>@item.FileStatus</td>
            <td>
                <a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus == FileStatus.Creating ? "disabled": "")">Download</a>
            </td>
        </tr>
    }
</table>
